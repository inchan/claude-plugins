{
  "version": "1.0.0",
  "evaluation_framework": {
    "dimensions": {
      "functionality": {
        "weight": 0.30,
        "threshold": 0.95,
        "description": "Measures correctness, completeness, and reliability of the implementation",
        "criteria": {
          "correctness": {
            "description": "All functional requirements are met",
            "evaluation_points": [
              "All specified features are implemented",
              "Business logic is correct",
              "Expected outputs are produced for valid inputs",
              "Requirements traceability is maintained"
            ]
          },
          "completeness": {
            "description": "Edge cases and error conditions are handled",
            "evaluation_points": [
              "Null/undefined inputs are handled",
              "Boundary conditions are addressed",
              "Invalid input cases are managed",
              "Error conditions are anticipated and handled"
            ]
          },
          "reliability": {
            "description": "Error handling and recovery mechanisms are robust",
            "evaluation_points": [
              "Comprehensive error handling is in place",
              "Meaningful error messages are provided",
              "Graceful degradation on failures",
              "Recovery mechanisms exist where appropriate"
            ]
          }
        },
        "evaluation_methods": [
          {
            "method": "unit_test_execution",
            "description": "Execute existing unit tests or recommend creating them",
            "scoring": "Pass rate × completeness factor"
          },
          {
            "method": "integration_test_verification",
            "description": "Verify integration points and data flow",
            "scoring": "Integration coverage and correctness"
          },
          {
            "method": "edge_case_analysis",
            "description": "Analyze handling of boundary and error conditions",
            "scoring": "Percentage of edge cases properly handled"
          }
        ]
      },
      "performance": {
        "weight": 0.20,
        "threshold": 0.85,
        "description": "Evaluates algorithmic efficiency and resource utilization",
        "criteria": {
          "time_complexity": {
            "description": "Algorithmic time complexity is optimal",
            "evaluation_points": [
              "Time complexity is O(n log n) or better for critical paths",
              "No unnecessary nested loops",
              "Efficient algorithms are used",
              "Time-intensive operations are optimized"
            ],
            "scoring_guide": {
              "O(1), O(log n), O(n)": 1.0,
              "O(n log n)": 0.85,
              "O(n²) with n < 1000": 0.70,
              "O(n²) with n > 1000": 0.50,
              "O(n³) or worse": 0.30
            }
          },
          "space_complexity": {
            "description": "Memory usage is efficient",
            "evaluation_points": [
              "No memory leaks",
              "Efficient data structures",
              "Appropriate use of caching",
              "Memory footprint is reasonable"
            ]
          },
          "response_time": {
            "description": "Operations complete within acceptable time",
            "evaluation_points": [
              "API responses < 200ms for simple operations",
              "API responses < 1s for complex operations",
              "No blocking operations on main thread",
              "Asynchronous operations where appropriate"
            ]
          }
        },
        "evaluation_methods": [
          {
            "method": "complexity_analysis",
            "description": "Analyze time and space complexity of algorithms",
            "scoring": "Based on Big-O notation and practical implications"
          },
          {
            "method": "benchmark_execution",
            "description": "Recommend benchmark tests for performance-critical code",
            "scoring": "Performance relative to requirements"
          },
          {
            "method": "profiling_analysis",
            "description": "Identify bottlenecks and hotspots",
            "scoring": "Efficiency of critical paths"
          }
        ]
      },
      "code_quality": {
        "weight": 0.20,
        "threshold": 0.90,
        "description": "Assesses readability, maintainability, and adherence to best practices",
        "criteria": {
          "readability": {
            "description": "Code is easy to read and understand",
            "evaluation_points": [
              "Clear and descriptive naming",
              "Consistent formatting",
              "Appropriate comments for complex logic",
              "Self-documenting code patterns"
            ]
          },
          "maintainability": {
            "description": "Code is easy to modify and extend",
            "evaluation_points": [
              "Low coupling between modules",
              "High cohesion within modules",
              "Single Responsibility Principle followed",
              "Clear separation of concerns"
            ]
          },
          "modularity": {
            "description": "Proper component separation and reusability",
            "evaluation_points": [
              "Functions/methods have single purpose",
              "Code is organized into logical modules",
              "Reusable components are extracted",
              "Dependencies are managed properly"
            ]
          }
        },
        "evaluation_methods": [
          {
            "method": "static_code_analysis",
            "description": "Apply linting rules and style guidelines",
            "scoring": "Compliance with standards"
          },
          {
            "method": "cyclomatic_complexity",
            "description": "Calculate complexity metrics",
            "scoring_guide": {
              "1-10": "Simple, easy to test (1.0)",
              "11-20": "More complex, moderate risk (0.85)",
              "21-50": "Complex, high risk (0.60)",
              ">50": "Untestable, very high risk (0.30)"
            }
          },
          {
            "method": "code_smell_detection",
            "description": "Identify anti-patterns and code smells",
            "common_smells": [
              "Long methods (>50 lines)",
              "Large classes (>300 lines)",
              "Too many parameters (>5)",
              "Duplicate code",
              "Dead code",
              "Magic numbers",
              "Deep nesting (>4 levels)"
            ]
          }
        ]
      },
      "security": {
        "weight": 0.15,
        "threshold": 0.95,
        "description": "Evaluates security practices and vulnerability prevention",
        "criteria": {
          "vulnerability_free": {
            "description": "No known security vulnerabilities present",
            "evaluation_points": [
              "No SQL injection vulnerabilities",
              "No Cross-Site Scripting (XSS) vulnerabilities",
              "No Cross-Site Request Forgery (CSRF) vulnerabilities",
              "No insecure deserialization",
              "No XML External Entities (XXE) vulnerabilities"
            ]
          },
          "auth_implementation": {
            "description": "Authentication and authorization are properly implemented",
            "evaluation_points": [
              "Strong password requirements enforced",
              "Secure session management",
              "Proper JWT implementation if used",
              "Authorization checks on all protected resources",
              "Principle of least privilege applied"
            ]
          },
          "data_protection": {
            "description": "Sensitive data is properly protected",
            "evaluation_points": [
              "Sensitive data encrypted at rest",
              "Sensitive data encrypted in transit (HTTPS)",
              "No hardcoded secrets or credentials",
              "Proper key management",
              "PII (Personally Identifiable Information) protected"
            ]
          }
        },
        "evaluation_methods": [
          {
            "method": "security_scanning",
            "description": "Identify common security vulnerabilities",
            "checks": [
              "Input validation on all user inputs",
              "Output encoding to prevent XSS",
              "Parameterized queries to prevent SQL injection",
              "CSRF tokens on state-changing operations",
              "Secure headers (CSP, X-Frame-Options, etc.)"
            ]
          },
          {
            "method": "owasp_compliance_check",
            "description": "Verify compliance with OWASP Top 10",
            "owasp_top_10": [
              "A01: Broken Access Control",
              "A02: Cryptographic Failures",
              "A03: Injection",
              "A04: Insecure Design",
              "A05: Security Misconfiguration",
              "A06: Vulnerable and Outdated Components",
              "A07: Identification and Authentication Failures",
              "A08: Software and Data Integrity Failures",
              "A09: Security Logging and Monitoring Failures",
              "A10: Server-Side Request Forgery (SSRF)"
            ]
          },
          {
            "method": "penetration_testing",
            "description": "Recommend security testing approaches",
            "areas": [
              "Input validation testing",
              "Authentication bypass attempts",
              "Authorization testing",
              "Session management testing",
              "Error handling analysis"
            ]
          }
        ]
      },
      "documentation": {
        "weight": 0.15,
        "threshold": 0.85,
        "description": "Assesses documentation quality and completeness",
        "criteria": {
          "completeness": {
            "description": "All necessary documentation is present",
            "evaluation_points": [
              "README with project overview",
              "API documentation for public interfaces",
              "Setup and installation instructions",
              "Usage examples and tutorials",
              "Inline comments for complex logic"
            ]
          },
          "clarity": {
            "description": "Documentation is clear and understandable",
            "evaluation_points": [
              "Clear and concise language",
              "Proper grammar and spelling",
              "Logical organization",
              "Appropriate level of detail"
            ]
          },
          "examples": {
            "description": "Practical examples are provided",
            "evaluation_points": [
              "Code examples are present",
              "Examples are realistic and practical",
              "Examples demonstrate common use cases",
              "Examples are tested and working"
            ]
          }
        },
        "evaluation_methods": [
          {
            "method": "documentation_coverage",
            "description": "Measure documentation completeness",
            "scoring_guide": {
              "All public APIs documented": "+30%",
              "Complex logic commented": "+20%",
              "README present and comprehensive": "+20%",
              "Examples provided": "+15%",
              "Setup instructions clear": "+15%"
            }
          },
          {
            "method": "api_doc_validation",
            "description": "Verify API documentation accuracy",
            "checks": [
              "All parameters documented",
              "Return types specified",
              "Error conditions documented",
              "Authentication requirements noted"
            ]
          },
          {
            "method": "example_execution",
            "description": "Verify examples are executable and correct",
            "scoring": "Percentage of examples that work as documented"
          }
        ]
      }
    },
    "scoring": {
      "calculation": "weighted_sum",
      "formula": "total_score = Σ(dimension_score × dimension_weight)",
      "passing_criteria": {
        "all_thresholds_met": "Each dimension score >= dimension threshold",
        "minimum_total_score": 0.90
      }
    },
    "iteration_control": {
      "max_iterations": 5,
      "minimum_iterations": 1,
      "early_termination": {
        "condition": "all_thresholds_met OR no_significant_improvement",
        "no_significant_improvement": {
          "definition": "improvement < 0.05 for 2 consecutive iterations",
          "minimum_iterations_before_check": 3
        }
      }
    },
    "optimization_focus_presets": {
      "balanced": {
        "description": "Equal focus on all dimensions",
        "dimension_multipliers": {
          "functionality": 1.0,
          "performance": 1.0,
          "code_quality": 1.0,
          "security": 1.0,
          "documentation": 1.0
        }
      },
      "performance": {
        "description": "Prioritize performance and efficiency",
        "dimension_multipliers": {
          "functionality": 1.0,
          "performance": 1.5,
          "code_quality": 0.8,
          "security": 1.0,
          "documentation": 0.7
        }
      },
      "security": {
        "description": "Prioritize security hardening",
        "dimension_multipliers": {
          "functionality": 1.0,
          "performance": 0.8,
          "code_quality": 1.0,
          "security": 1.5,
          "documentation": 0.9
        }
      },
      "quality": {
        "description": "Prioritize code quality and maintainability",
        "dimension_multipliers": {
          "functionality": 1.0,
          "performance": 0.9,
          "code_quality": 1.5,
          "security": 1.0,
          "documentation": 1.2
        }
      }
    }
  }
}
