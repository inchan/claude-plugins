{
  "skill": {
    "name": "intelligent-task-router",
    "version": "1.0.0",
    "author": "Claude Code User",
    "description": "Intelligent task classification and routing system implementing the Routing pattern from Anthropic's Building Effective Agents",
    "created": "2025-01-11",
    "updated": "2025-01-11"
  },
  "classification": {
    "enabled": true,
    "confidence_threshold": 0.6,
    "multi_label_enabled": true,
    "max_secondary_categories": 3
  },
  "routing": {
    "default_skill": "sequential-task-processor",
    "default_model": "claude-3-sonnet",
    "fallback_on_low_confidence": true,
    "require_clarification_below_threshold": true
  },
  "complexity": {
    "weights": {
      "scope": 0.4,
      "dependencies": 0.3,
      "technical_depth": 0.3
    },
    "model_thresholds": {
      "haiku": 0.5,
      "sonnet": 0.7,
      "opus": 1.0
    }
  },
  "urgency": {
    "enabled": true,
    "default_level": "medium",
    "levels": ["low", "medium", "high"]
  },
  "learning": {
    "feedback_enabled": false,
    "track_routing_outcomes": false,
    "adaptive_weights": false
  },
  "integration": {
    "skills": {
      "sequential-task-processor": {
        "enabled": true,
        "description": "Linear step-by-step task execution"
      },
      "parallel-executor": {
        "enabled": true,
        "description": "Concurrent independent task execution"
      },
      "dynamic-orchestrator": {
        "enabled": true,
        "description": "Complex multi-component task coordination"
      },
      "quality-enhancer": {
        "enabled": true,
        "description": "Code quality and performance improvement"
      }
    }
  },
  "files": {
    "categories": "routing_rules/categories.yaml",
    "skill_mapping": "routing_rules/skill_mapping.json",
    "clarification_template": "templates/clarification_request.md"
  },
  "classifiers": {
    "keyword_classifier": "classifiers/keyword_classifier.py",
    "intent_classifier": "classifiers/intent_classifier.py",
    "complexity_analyzer": "classifiers/complexity_analyzer.py"
  },
  "examples": {
    "bug_fix": "examples/bug_fix_routing.md",
    "feature_development": "examples/feature_routing.md"
  },
  "metadata": {
    "pattern": "Routing",
    "source": "Building Effective Agents - Anthropic",
    "url": "https://www.anthropic.com/engineering/building-effective-agents"
  }
}
