{
  "name": "inchan-claude-plugin",
  "owner": {
    "name": "inchan"
  },
  "metadata": {
    "description": "TDD 방식의 자동화된 개발 워크플로우. 5개의 전문 에이전트(task-planner, test-writer, implementer, refactorer, reviewer)가 Red-Green-Refactor 사이클을 자동으로 실행합니다.",
    "homepage": "https://github.com/inchan/claude-plugins"
  },
  "plugins": [
    {
      "name": "inchan-all",
      "version": "0.1.0",
      "description": "모든 스킬, 에이전트, 명령어를 포함하는 통합 플러그인",
      "author": {
        "name": "inchan",
        "url": "https://github.com/inchan"
      },
      "source": "./",
      "skills": [
        "./plugins/search/skills/search-core/SKILL.md",
        "./plugins/outsourcing/skills/outsourcing-core/SKILL.md"
      ],
      "commands": [
        "./plugins/tdd/commands/tdd-team.md",
        "./plugins/search/commands/search.md",
        "./plugins/doc-tools/commands/doc-update.md",
        "./plugins/outsourcing/commands/outsource.md"
      ],
      "agents": [
        "./plugins/base/agents/engineer.md",
        "./plugins/tdd/agents/task-planner.md",
        "./plugins/tdd/agents/test-writer.md",
        "./plugins/tdd/agents/implementer.md",
        "./plugins/tdd/agents/refactorer.md",
        "./plugins/tdd/agents/reviewer.md",
        "./plugins/search/agents/search-agent.md",
        "./plugins/doc-tools/agents/doc-updater.md",
        "./plugins/outsourcing/agents/outsourcing-agent.md"
      ]
    },
    {
      "name": "inchan-base",
      "source": "./plugins/base"
    },
    {
      "name": "inchan-tdd",
      "source": "./plugins/tdd"
    },
    {
      "name": "inchan-search",
      "source": "./plugins/search"
    },
    {
      "name": "inchan-doc-tools",
      "source": "./plugins/doc-tools"
    },
    {
      "name": "inchan-outsourcing",
      "source": "./plugins/outsourcing"
    }
  ]
}